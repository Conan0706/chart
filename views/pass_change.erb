<body>
    <div class="illust">
        <div class="imagebox1 imagebox">
            <div class="susi ikura"></div>
            <div class="susi tamago"></div>
        </div>
        <img src="../images/logo.png" class="logo">
        <div class="imagebox2 imagebox">
            <div class="susi ebi"></div>
