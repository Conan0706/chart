                    <input type="password" name ="password" placeholder="パスワード" required = "required" class="whitebox">
                </div>
                <div class="label">
                    <p class="caption">
                        パスワード確認
                    </p>
                    <input type ="password" name ="password_confirmation" placeholder="パスワード確認" required = "required" class="whitebox">
